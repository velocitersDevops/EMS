<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>EMS</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
   <servlet>
     <servlet-name>register</servlet-name> 
    <servlet-class>com.velociter.ems.controller.EmployeeRegisterServlet</servlet-class> 
   </servlet> 
   <context-param>  
      <param-name>Email</param-name>  
       <param-value>abc@gmail.com</param-value>  
   </context-param>
   <context-param>  
      <param-name>password</param-name>  
       <param-value>abc@123</param-value>  
   </context-param>
   <servlet-mapping> 
    <servlet-name>register</servlet-name> 
     <url-pattern>/register</url-pattern>
   </servlet-mapping>
   
   <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.velociter.ems.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>EditEmployeeDetailsServlet</servlet-name>
    <servlet-class>com.velociter.ems.controller.EditEmployeeDetailsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditEmployeeDetailsServlet</servlet-name>
    <url-pattern>/EditEmployeeDetailsServlet</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>AddProjectServlet</servlet-name>
    <servlet-class>com.velociter.ems.controller.AddProjectServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddProjectServlet</servlet-name>
    <url-pattern>/AddProjectServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>AddManagerServlet</servlet-name>
    <servlet-class>com.velociter.ems.controller.AddManagerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddManagerServlet</servlet-name>
    <url-pattern>/AddManagerServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.velociter.ems.controller.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/LogoutServlet</url-pattern>
  </servlet-mapping>
</web-app>